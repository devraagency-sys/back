generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Form {
  id        String   @id @default(uuid())
  name      String
  contact   String // может быть email или telegram username
  method    String // 'email' или 'telegram'
  theme     String
  message   String
  createdAt DateTime @default(now())
}

model Review {
  id          Int      @id @default(autoincrement())
  projectLogo String // url лого проекта
  projectName String
  authorName  String
  authorRole  String
  text        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Partners {
  id   Int    @id @default(autoincrement())
  logo String
  link String
}
