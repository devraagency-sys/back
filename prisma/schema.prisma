generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Form {
  id        String   @id @default(uuid())
  name      String
  contact   String // может быть email или telegram username
  method    String // 'email' или 'telegram'
  theme     String
  message   String
  createdAt DateTime @default(now())
}


model Review {
  id            Int      @id @default(autoincrement())
  projectLogo   String
  projectName_ua String
  projectName_ru String
  projectName_en String
  authorName     String
  authorRole_ua  String
  authorRole_ru  String
  authorRole_en  String
  text_ua        String
  text_ru        String
  text_en        String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}


model Partners {
  id   Int    @id @default(autoincrement())
  logo String
  link String
}

model Case {
  id        Int    @id @default(autoincrement())
  title_ua  String
  title_ru  String
  title_en  String
  budget_ua String
  budget_ru String
  budget_en String
  users_ua  String
  users_ru  String
  users_en  String
  geo_ua    String
  geo_ru    String
  geo_en    String
  cpi_ua    String
  cpi_ru    String
  cpi_en    String
  img       String
}

model TeamMember {
  id     Int    @id @default(autoincrement())
  name   String
  avatar String
}
